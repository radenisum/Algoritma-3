#include <iostream>
#include <string>


using namespace std;

void main ()
{
	string nama_awal; 
	string nama_akhir; 
	string bulan;
	int tanggal_lahir; 
	int bulan_lahir;
	int tahun_lahir;
	int umur;
	int tahun_sekarang; 

	cout<<"Masukkan Biodata"<<endl;

	cout<<" Nama Awal		: ";
	cin>>nama_awal;
	cout<<" Nama Akhir		: ";
	cin>>nama_akhir;

	cout<<"Masukkan Tanggal Lahir"<<endl;

	cout<<" Tanggal Lahir	: ";
	cin>>tanggal_lahir;
	cout<<" Bulan Lahir		: ";
	cin>>bulan_lahir<<;
	cout<<" Tahun Lahir		: ";
	cin>>tahun_lahir;
	 umur=tahun_sekarang-tahun_lahir;
	cout<<endl;

    cout<<"---------------------"<<endl; 
	cout<<"     MY BIODATA"     "<<endl;
	cout<<"---------------------"<<endl;

	cout<<"Nama				: "<<nama_awal<<" "<<nama_akhir<<endl;
	cout<<"Tanggal Lahir	: "<<tanggal_lahir<<" "<<bulan<<" "<<tahun_lahir<<endl;
	cout<<"Umur				: "<<umur<<" tahun"<<endl;

return 0;

	system ('pause');
	
}
